<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Theme.AppCompat.DayNight.NoActionBar"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/pet_logo_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pet_shop_logo_p" />

        <View
            android:id="@+id/pet_logo_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pet_shop_logo_e" />

        <View
            android:id="@+id/pet_logo_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pet_shop_logo_t" />

        <View
            android:id="@+id/pet_logo_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pet_shop_logo_shop" />

    </RelativeLayout>

</LinearLayout>